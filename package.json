{
  "name": "todolist",
  "version": "0.1.0",
  "homepage": "/",
  "private": true,
  "dependencies": {
    "@date-io/date-fns": "^2.14.0",
    "@date-io/dayjs": "^2.14.0",
    "@date-io/luxon": "^2.14.0",
    "@date-io/moment": "^2.14.0",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@reduxjs/toolkit": "1.4.0",
    "@types/react-beautiful-dnd": "^13.1.2",
    "axios": "^0.27.2",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "framer-motion": "^4.1.17",
    "json-server": "^0.17.0",
    "lodash.debounce": "^4.0.8",
    "node-sass": "^5.0.0",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-color": "^2.19.3",
    "react-datepicker": "^4.7.0",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-use": "^17.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test:coverage": "yarn test --watchAll false --coverage",
    "prettier": "prettier --parser typescript --single-quote --write \"src/**/*.{ts,tsx}\"",
    "stylelint": "npx stylelint \"**/*.{css,scss}\" --fix",
    "eslint": "eslint src/ --ext=.ts,.tsx --fix",
    "typecheck": "bash -c tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/lodash.debounce": "^4.0.7",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-color": "^3.0.6",
    "@types/react-datepicker": "^4.4.1",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.8",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.20.3",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run typecheck",
      "npm run eslint",
      "npm run prettier"
    ],
    "*.js": "eslint --cache --fix",
    "*.scss": "stylelint --fix"
  },
  "ignore": [
    "node_modules",
    ".build"
  ]
}
